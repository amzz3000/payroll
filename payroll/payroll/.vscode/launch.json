{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/server.js",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Frontend",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend"
        }
    ]
} 